{% extends "/frontoffice/base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <section class="container containerRegister">
        <h5 class="text-black text-center pb-4">Formulaire d'inscription</h5>
        <form action="POST" class="formRegister" method="POST">
            <div class="form-group col-6">
                <label for="firstname">Pr√©nom</label>
                <input type="text" required class="form-control" name="firstname" id="firstname">
            </div>
            <div class="form-group col-6">
                <label for="lastname">Nom</label>
                <input type="text" required class="form-control" name="lastname" id="lastname">
            </div>
            <div class="form-group col-12">
                <label for="email">Email</label>
                <input type="email" required class="form-control" name="email" id="email">
            </div>
            <div class="form-group col-12">
                <label for="password">Mot de passe</label>
                <input type="password" required class="form-control" name="password" id="password">
            </div>
            <div class="form-group col-12">
                <label for="passwordConfirm">Confirmez votre mot de passe</label>
                <input type="password" required class="form-control" name="passwordConfirm" id="passwordConfirm">
            </div>
            <div class="w-100 text-center p-4">
                <button type="submit" class="subtitle text-center m-0">Inscription</button>
            </div>
        </form>
    </section>
{% endblock %}